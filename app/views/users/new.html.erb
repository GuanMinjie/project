<div class="container">
  <%= form_for @user, url: {action: "create"}, html: {
      class: "form-horizontal"} do |f| %>

        <div class="form-group">
          <%= label_tag(:account, "账号:",class: "col-sm-2 col-md-1 control-label") %>
          <div class="col-sm-10 col-md-3">
            <%= f.text_field(:account,class:"form-control",placeholder:"账号") %>
          </div>
        </div>
      <div class="form-group">
        <%= label_tag(:password, "密码:",class: "col-sm-2 col-md-1 control-label") %>
        <div class="col-sm-10 col-md-3">
          <%= f.password_field :password,class:"form-control",placeholder:"输入密码" %>
        </div>
      </div>
        <div class="form-group">
          <%= label_tag(:password_confirmation, "确认密码:",class: "col-sm-2 col-md-1 control-label") %>
          <div class="col-sm-10 col-md-3">
            <%= f.password_field :password_confirmation,class:"form-control",placeholder:"确认密码" %>
          </div>
        </div>
      <div class="form-group">
        <%= label_tag :email, "邮箱:",class: "col-sm-2 col-md-1 control-label"%>
        <div class="col-sm-10 col-md-3">
          <%= f.email_field :email,class: "form-control",placeholder:"Email"%>
        </div>
      </div>
        <div class="form-group">
          <%= label_tag :phone, "电话:",class: "col-sm-2 col-md-1 control-label"%>
          <div class="col-sm-10 col-md-3" >
            <%= f.telephone_field :phone,class: "form-control",placeholder:"电话"%>
          </div>
        </div>
        <%= f.submit "Create",class:"btn btn-default" %>
  <% end %>
</div>